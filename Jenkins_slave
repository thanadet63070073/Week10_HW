pipeline {
    agent any
        environment {
            DOCKER_CONTAINER_FRONTEND = "frontend_server"
            DOCKER_CONTAINER_BACKEND = "backend_server"
            DOCKER_IMAGE_FRONTEND     = "thanadet63070073/frontend_image:1.0"
            DOCKER_IMAGE_BACKEND     = "thanadet63070073/backend_image:1.0"
        }


        stages {
            stage('Initialize Stage') {
                steps {
                    echo 'Initial : Delete containers and images'
                    sh 'docker stop ${DOCKER_CONTAINER_FRONTEND} || true'
                    sh 'docker stop ${DOCKER_CONTAINER_BACKEND} || true'
                    sh 'docker rm ${DOCKER_CONTAINER_FRONTEND} || true'
                    sh 'docker rm ${DOCKER_CONTAINER_BACKEND} || true'
                    sh 'docker rmi ${DOCKER_IMAGE_FRONTEND} || true'
                    sh 'docker rmi ${DOCKER_IMAGE_BACKEND} || true'
                }
            }

            stage('Pull Stage') {
                steps {
                    dir('Week10_HW') {
                        echo "Current path is ${pwd()}"
                        sh "docker pull ${DOCKER_IMAGE_BACKEND}"
                        sh "docker pull ${DOCKER_IMAGE_FRONTEND}"
                    }
                }
            }

            stage('Run Stage') {
                steps {
                    dir('Week10_HW') {
                        echo "Current path is ${pwd()}"
                        sh "docker run -d -p 8081:80 --name ${DOCKER_CONTAINER_NAME_BACKEND}  ${DOCKER_IMAGE_NAME_BACKEND}"
                        sh "docker run -d -p 8082:80 --name ${DOCKER_CONTAINER_NAME_FRONTEND} ${DOCKER_IMAGE_NAME_FRONTEND}"
                    }
                }
            }
        
        }
}